<!doctype html>
<html>
<head>
<script src="http://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
<meta charset="utf-8">
<link href="https://fonts.googleapis.com/css?family=Raleway|Gaegu|Quicksand|Roboto+Slab|Merienda|Roboto|Merienda|Acme|Righteous|Khand|Nunito" rel="stylesheet">
<link rel="stylesheet" href="/assets/style.css" type="text/css"/>
<title>Marinara Organic</title>
</head>

<body>

  <div class="gTitle">
    Items In This Task
  </div>
<div class="item-table">
  <ul class = "itemUl">
    <% for(i = 0; i < items.length; i++){ %>

      <% if (items[i].done == 1){ %>
        <li class = "itemLi itemDone">
          <div class="eachItem" id="<%= items[i].id %>" >
            <a href="/item-done/<%= items[i].id %>"><%= items[i].name %></a>
            <div class="item itemX" id="<%= items[i].id %>">X</div>
          </div>
        </li>
      <% } %>
      <% if (items[i].done == 0){ %>
        <li class = "itemLi">
          <div class="eachItem" id="<%= items[i].id %>" >
            <a href="/item-done/<%= items[i].id %>"><%= items[i].name %></a>
            <div class="item itemX" id="<%= items[i].id %>">X</div>
          </div>
        </li>
      <% } %>




    <% } %>
  </ul>
</div>

  <div class="item-table">
    <div class="addTodoTitle">
      Add a new item to the task...
    </div>
    <form method="post" action="/item/<%= task %>">
      <div class="form-group-item">
        <input class="inpLbl" id="FormTitle" type="text" name="name" placeholder="Title">
        <input id="btn" type="submit" value="Add Item">
      </div>
    </form>
  </div>


    <div class="gmo"><a href="/home">Home</a></div>
    <script src="/assets/script.js" type="text/javascript"></script>
</body>
</html>
