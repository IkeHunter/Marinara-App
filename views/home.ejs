<!doctype html>
<html>
	<head>
		<script src="http://code.jquery.com/jquery-3.3.1.min.js"
  integrity="sha256-FgpCb/KJQlLNfOu91ta32o/NMZxltwRo8QtmkMRdAu8="
  crossorigin="anonymous"></script>
		<meta charset="utf-8">
		<link href="https://fonts.googleapis.com/css?family=Raleway|Gaegu|Quicksand|Roboto+Slab|Merienda|Roboto|Merienda|Acme|Righteous|Khand|Nunito" rel="stylesheet">
		<link rel="stylesheet" href="/assets/style.css" type="text/css"/>
		<title>Marinara Organic</title>
	</head>
	<body>
		<div class="mo">
			<div class="m">Marinara</div>
			<div class="o">Organic</div>
		</div>

		<div id = "todo-table">

			<div class="addTodoTitle">
				<%= user.firstname %>'s tasks
			</div>

			<ul class="taskUl">
				<% for(i = 0; i < tasks.length; i++){ %>

					<li class="taskLi" id="<%= tasks[i].id %>">
						<a href="/item/<%= tasks[i].id %>"><%= tasks[i].name %></a>
						<div class="task taskX" id="<%= tasks[i].id %>">X</div>
					</li>

				<% } %>

			</ul>

			<div class="newTsk">
				<a href="/task">Add New Task</a>
			</div>

		</div>
		<div class="gmo">
			Confused? Click <a href="/info">here</a>. <br>
		</div>
		<div class="lgo">
			<a href="/logout">Log Out</a>
		</div>

	</body>
	<script src="/assets/script.js" type="text/javascript"></script>
</html>
